<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape Drawable (배경) -->
    <item>
        <shape>
            <size
                android:width="320dp"
                android:height="220dp"/>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <!-- 테두리 그림자 -->
    <item>
        <shape>
            <size
                android:width="320dp"
                android:height="220dp"/>
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#20000000"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
</layer-list>