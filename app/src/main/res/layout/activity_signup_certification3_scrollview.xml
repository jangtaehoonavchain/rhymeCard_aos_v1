<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/certification3_scrollview_constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/certification2_scrollview_constraint1_code_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/edPasscode1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPasscode2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edPasscode2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPasscode3"
                app:layout_constraintStart_toEndOf="@+id/edPasscode1"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edPasscode3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPasscode4"
                app:layout_constraintStart_toEndOf="@+id/edPasscode2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edPasscode4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPasscode5"
                app:layout_constraintStart_toEndOf="@+id/edPasscode3"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edPasscode5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edPasscode6"
                app:layout_constraintStart_toEndOf="@+id/edPasscode4"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edPasscode6"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edPasscode5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/certification3_scrollview_constraint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/certification2_scrollview_constraint1_code_input">


            <TableLayout
                android:id="@+id/tl_keys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow>

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="18dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_margin="5dp"
                        android:focusableInTouchMode="false"
                        android:text="재배열" />

                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btnErase"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:focusableInTouchMode="false"
                        android:text="DEL" />
                </TableRow>
            </TableLayout>







        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>